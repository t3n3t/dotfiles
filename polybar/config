[bar/mybar]

background = ${xrdb:color0:#000000}
foreground = ${xrdb:color15:#fff}

wm-restack = i3
fixed-center = true
height = 20
line-size = 0
border-size = 0
module-margin = 2

font-0 = "Fira Sans:size=9;3"
font-1 = "Hack:size=9;2"

modules-left = i3
modules-center = date
modules-right = xkeyboard

tray-position = right
tray-maxsize = 16

[module/date]
type = internal/date
date = %d-%m-%Y
time = %H:%M
label = %date% %time%

[module/i3]
type = internal/i3
label-separator = |
label-separator-padding = 1
label-separator-foreground = ${xrdb:color0:#000000}
[module/pulseaudio]
type = internal/pulseaudio
click-right = pavucontrol &

[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-layout> <label-indicator>
label-layout = %layout%

[module/title]
type = internal/xwindow
label-maxlen = 100
